<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9E9E9"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dip"
        android:background="#FB8C00"
        android:gravity="right" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="left|center" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="right|center" >

            <com.alireza.amiri.resketi.CustomTextView
                android:id="@+id/customTextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="درباره ما"
                android:textColor="#ffffff" />

            <ImageView
                android:id="@+id/men_about"
                android:layout_width="48dip"
                android:layout_height="20dip"
                android:src="@drawable/menuu" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_margin="8dip"
        android:background="#FAFAFA"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="208dip"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scaleType="fitXY"
                android:src="@drawable/shape" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.5"
            android:gravity="right"
            android:orientation="vertical" >

            <com.alireza.amiri.resketi.CustomTextView
                android:id="@+id/CustomTextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dip"
                android:layout_marginTop="30dip"
                android:gravity="right"
                android:singleLine="false"
                android:text="تجربه ای جدید در خرید نان \n \n      علیرضا امیری رسکتی"
                android:textColor="#444444" android:layout_gravity="center_horizontal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dip"
                android:gravity="center_horizontal" android:layout_marginRight="20dip" android:layout_gravity="center_horizontal">

                <com.alireza.amiri.resketi.CustomTextView
                    android:id="@+id/CustomTextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dip"
                    android:layout_marginTop="30dip"
                    android:layout_weight="0.5"
                    android:gravity="right"
                    android:text="alireza.amiri92@gmail.com"
                    android:textColor="#EF6C00" />

                <com.alireza.amiri.resketi.CustomTextView
                    android:id="@+id/CustomTextView02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dip"
                    android:gravity="right"
                    android:text="ایمیل :"
                    android:textColor="#444444" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>