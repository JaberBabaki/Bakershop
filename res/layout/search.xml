<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:background="#E9E9E9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dip"
        android:background="#FB8C00"
        android:gravity="right|center" >

        <LinearLayout
            android:id="@+id/lay_search"
            android:layout_width="0dip"
            android:layout_height="wrap_content" android:layout_weight="0.99">

            <RelativeLayout
                android:id="@+id/lay_r_search"
                android:layout_width="fill_parent"
                android:layout_height="38dip"
                android:orientation="vertical" android:gravity="center">

                <EditText
                    android:id="@+id/edt_search"
                    android:layout_width="fill_parent"
                    android:layout_height="30dip"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="16dip"
                    android:layout_marginRight="4dip"
                    android:layout_marginTop="4dip"
                    android:layout_weight="1"
                    android:background="@drawable/button_send"
                    android:clickable="true"
                    android:cursorVisible="true"
                    android:ems="10"
                    android:fitsSystemWindows="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center"
                    android:keepScreenOn="false"
                    android:singleLine="true"
                    android:textSize="14dip">

                    <requestFocus />
                </EditText>

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="48dip"
                    android:layout_height="48dip"
                    android:layout_marginLeft="13dip"
                    android:layout_marginTop="8dip"
                    android:src="@drawable/searcho" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="right|center" >

            <ImageView
                android:id="@+id/men_search"
                android:layout_width="48dip"
                android:layout_height="20dip"
                android:src="@drawable/menuu" />

        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/lst_search"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:cacheColorHint="@null"
        android:clickable="false"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:divider="@null"
        android:dividerHeight="0dip"
        android:drawable="@android:color/transparent"
        android:duplicateParentState="true"
        android:focusable="false" >

        <!-- Preview: listitem=@layout/item_listview -->eview: listitem=@layout/item_listview >
    </ListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" android:layout_margin="8dip" android:background="#FFFFFF">
    </LinearLayout>

</LinearLayout>